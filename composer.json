{
    "name": "w-dejong/laravel-multi-language-strings",
    "description": "Laravel Package that adds a Multilanguage string class and an Attribute cast for adding language support to Models.",
    "type": "library",
    "keywords": [
        "laravel",
        "multilanguage",
        "strings",
        "attribute",
        "cast"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Wouter de Jong",
            "email": "wj@dejo.dev"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": "^8.2",
        "laravel/framework": "^10.0||^11.0||^12.0"
    },
    "require-dev": {
        "laravel/pint": "^1.14",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-arch": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan": "1.12.x-dev",
        "phpstan/phpstan-deprecation-rules": "^1.1",
        "phpstan/phpstan-phpunit": "^1.3",
        "orchestra/testbench": "10.x-dev"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "autoload": {
        "psr-4": {
            "DeJoDev\\MultiLanguageStrings\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DeJoDev\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/",
            "Workbench\\Database\\Seeders\\": "workbench/database/seeders/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@clear",
            "@prepare"
        ],
        "lint": [
            "@php vendor/bin/pint --ansi --test",
            "@php vendor/bin/phpstan analyse --verbose --ansi"
        ],
        "fix": [
            "@php vendor/bin/pint --ansi"
        ],
        "test": [
            "@clear",
            "@php vendor/bin/pest"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi"
    }
}
